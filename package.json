  "license": "ISC",
  "devDependencies": {
    "pegjs": "^0.9.0",
    "webpack": "^1.12.13",
    "webpack-dev-server": "^1.14.1"
  },
  "private": true,
  "eslintConfig": {
    "env": {
      "es6": true,
      "node": true
    }
  },
  "dependencies": {
    "babel-core": "^6.5.1",
    "babel-loader": "^6.2.2",
    "babel-preset-es2015": "^6.5.0",
    "codemirror": "^5.11.0",
    "debounce": "^1.0.0"
  }
